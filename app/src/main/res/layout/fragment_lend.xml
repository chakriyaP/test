<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lend_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LendFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:text="รายละเอียดการยืม-คืน"
        android:textSize="25sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_lend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        app:cornerRadius="32dp"
        android:text="ยืนยัน" />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lendText"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:text="Book Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5pt"
        android:text="DD/MM/YYYY"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8pt"
        android:text="วันที่ยืม-คืนหนังสือ"
        android:textSize="20sp" />


</RelativeLayout>